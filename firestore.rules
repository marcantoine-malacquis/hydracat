rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Deny by default - no access unless explicitly granted
    match /{document=**} {
      allow read, write: if false;
    }
    
    // User documents - only owner access
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // TODO: Add specific rules for other collections as you develop your app
    // Example patterns:
    // - Public collections: allow read: if true; allow write: if request.auth != null;
    // - Owner-only collections: allow read, write: if request.auth != null && request.auth.uid == resource.data.ownerId;
    // - Shared collections: custom logic based on your app's requirements
  }
}