{
  "firestore": {
    "database": "(default)",
    "location": "eur3",
    "rules": "../shared/firestore.rules",
    "indexes": "../shared/firestore.indexes.json"
  },
  "functions": [
    {
      "source": "../../functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint"
      ]
    }
  ],
  "hosting": {
    "public": "../../public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "../shared/storage.rules"
  }
}
